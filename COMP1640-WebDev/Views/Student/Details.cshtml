@model Magazine
@{
    ViewData["Title"] = "Details";
    Layout = "./Layout/_StudentLayout";
}
<style>
    .rounded-3d {
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

        .rounded-3d:hover {
            transform: scale3d(1.1, 1.1, 1.1);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

        .rounded-3d:hover {
            transition: all 0.3s ease;
        }

    .magazine-image {
        height: 450px;
        width: 300px;
        border: 3px solid white;
    }

    .details {
        border: 1px solid black;
        padding-top: 30px;
        padding-bottom: 30px;
        border-radius: 20px;
    }
    .section-contribution{
        padding: 15px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: #FFFFFF;
        border: 1px solid #dee2e6;
        border-left: 5px solid black;
    }
</style>

<div class="container min-vh-100 px-4 mt-4 mb-4">
    <div class="row details bg-black text-white">
        <div class="col-sm-6 col-lg-6 col-xl-6 d-flex justify-content-lg-end justify-content-center">
            <img src="@ViewBag.Image" class="img-fluid rounded-3d magazine-image mb-3 mb-lg-0" alt="Image">
        </div>
        <div class="col-sm-6 col-lg-6 col-xl-6">
            <h1 class="display-4">
                <i class="bi bi-newspaper"></i>
                @Model.Title
            </h1>
            <p class="lead"><i class="bi bi-info-circle"></i> Description: @Model.Description</p>
            <ul class="list-unstyled">
                <li>
                    <i class="bi bi-tag"></i>
                    <strong>Faculty:</strong> @Model.Faculty!.FacultyName
                </li>
                <li>
                    <i class="bi bi-calendar-check"></i>
                    <strong>Start Date:</strong> @Model.AcademicYear!.StartDate
                </li>
                <li>
                    <i class="bi bi-calendar-check"></i>
                    <strong>Closure Date:</strong> @Model.AcademicYear!.ClosureDate
                </li>
                <li>
                    <i class="bi bi-calendar-check"></i>
                    <strong>Final Date:</strong> @Model.AcademicYear!.FinalDate
                </li>
            </ul>
        </div>
    </div>
    <div class="my-3">
        <div class="section-contribution mb-0">
            <h4 class="m-0 text-uppercase fw-bold">Contributions</h4>
        </div>
        <div class="bg-white border border-top-0 p-4">
            <div class="contribution mb-4">
                <h5>Chỗ ni sẽ render các list contribute được accept</h5>
            </div>
        </div>
    </div>
    <div class="my-3">
        <div class="section-contribution mb-0">
            <h4 class="m-0 text-uppercase fw-bold">Leave a contribute</h4>
        </div>
        <div class="bg-white border border-top-0 p-4">
            <form action="#" method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" class="form-control" id="title" name="title" required>
                </div>
                <div class="mb-3">
                    <label for="article" class="form-label">Word document</label>
                    <input type="file" class="form-control" id="article" name="article[]" accept=".doc, .docx" multiple required>
                </div>
                <div class="mb-3">
                    <label for="images" class="form-label">Images</label>
                    <input type="file" class="form-control" id="images" name="images[]" accept="image/*" multiple required>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="agree" required>
                    <label class="form-check-label" for="agree">I agree to the Terms and Conditions</label>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>

