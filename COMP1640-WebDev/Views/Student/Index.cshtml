@using COMP1640_WebDev.ViewModels
@model IEnumerable<MagazineTableView>
@{
    Layout = "./Layout/_StudentLayout";
}



<style>
    .articleCard {
        height: 100%;
        transition: transform 0.3s ease, background-color 0.3s ease, border-radius 0.3s ease, border 0.3s ease;
    }

        .articleCard:hover {
            transform: translateY(-15px);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1), 0 6px 15px rgba(0, 0, 0, 0.1), 0 15px 25px rgba(0, 0, 0, 0.1);
        }

    .imageArticle {
        height: 300px;
        border: 2px solid white;
        border-radius: 5px;
    }
</style>

<div class="container-fluid">
    <div class="row mt-3 mb-4 d-flex justify-content-lg-center">
        <div class="col col-lg-6">
            <form id="searchForm" action="@Url.Action("Index", "Student")" method="get">
                <div class="input-group">
                    <input type="text" name="title" id="searchInput" class="form-control" placeholder="Search by title" aria-label="Search by title">
                    <button type="submit" class="btn btn-secondary">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <div class="row">
        @foreach (var magazine in Model)
        {
            <div class="col-lg-3 my-3">
                <div class="card articleCard mb-3 bg-dark text-white p-2">
                    <img src="@magazine.CoverImage" class="card-img-top imageArticle" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><i class="bi bi-newspaper me-2"></i>@magazine.Title</h5>
                        <p class="card-text">
                            <i class="bi bi-bookmark me-2"></i>
                            @magazine.Faculty
                        </p>
                        <a href="#" class="btn btn-primary">View details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


