@model Magazine
@{
    ViewData["Title"] = "Details";
    Layout = "./Layout/_GuestLayout";
}
<style>
    .rounded-3d {
        border-radius: 20px;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        transition: all 0.3s ease;
    }

        .rounded-3d:hover {
            transform: scale3d(1.1, 1.1, 1.1);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
        }

        .rounded-3d:hover {
            transition: all 0.3s ease;
        }

    .magazine-image {
        height: 450px;
        width: 300px;
        border: 3px solid white;
    }

    .details {
        border: 1px solid black;
        padding-top: 30px;
        padding-bottom: 30px;
        border-radius: 20px;
    }
</style>

<div class="min-vh-100 px-4 mt-4 mb-4">
    <div class="row details bg-black text-white">
        <div class="col-sm-6 col-lg-6 col-xl-6 d-flex justify-content-lg-end justify-content-center">
            <img src="@ViewBag.Image" class="img-fluid rounded-3d magazine-image mb-3 mb-lg-0" alt="Image">
        </div>
        <div class="col-sm-6 col-lg-6 col-xl-6">
            <h1 class="display-4">
                <i class="bi bi-newspaper"></i>
                @Model.Title
            </h1>
            <p class="lead"><i class="bi bi-info-circle"></i> Description: @Model.Description</p>
            <ul class="list-unstyled">
                <li>
                    <i class="bi bi-tag"></i>
                    <strong>Faculty:</strong> @Model.Faculty!.FacultyName
                </li>
                <li>
                    <i class="bi bi-calendar-check"></i>
                    <strong>Start Date:</strong> @Model.AcademicYear!.StartDate
                </li>
                <li>
                    <i class="bi bi-calendar-check"></i>
                    <strong>Closure Date:</strong> @Model.AcademicYear!.ClosureDate
                </li>
                <li>
                    <i class="bi bi-calendar-check"></i>
                    <strong>Final Date:</strong> @Model.AcademicYear!.FinalDate
                </li>
            </ul>
        </div>
    </div>
</div>

