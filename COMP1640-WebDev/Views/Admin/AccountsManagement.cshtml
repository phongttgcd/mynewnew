@using Microsoft.AspNetCore.Identity
@model IEnumerable<User>
@inject UserManager<User> UserManager

@{
    Layout = "./Layout/_AdminLayout";
}
<style>
    .table-3d {
        border-collapse: separate;
        border-spacing: 0;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1), 0 6px 20px rgba(0, 0, 0, 0.19);
        transition: transform 0.3s ease;
    }

        .table-3d:hover {
            transform: rotateY(10deg);
        }

        .table-3d th,
        .table-3d td {
            border: 1px solid #dddddd;
            padding: 8px;
            background-color: #ffffff;
        }

        .table-3d th {
            background-color: #f2f2f2;
        }

</style>

<div class="px-4 mt-4 min-vh-100">
    <div class="mb-3">
        <h1 class="admin-heading">Accounts Management</h1>
    </div>

    <div class="d-flex justify-content-end mb-3">
        <a class="btn btn-primary" asp-area="Identity" asp-page="/Account/Register"><i class="bi bi-plus-circle me-2"></i>Add new account</a>
    </div>

    @if (TempData["AlertMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["AlertMessage"]
        </div>
    }

    <div class="table-responsive">
        <table class="table table-3d table-striped">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Faculty</th>
                    <th>Comfirmed</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {

                    <tr>
                        <th>@user.UserName</th>
                        <td>@user.Email</td>
                        <td>@user.Faculty</td>
                        <td>@user.EmailConfirmed</td>
                        <td class="d-flex justify-content-center">
                            <a class="btn btn-primary me-3" asp-controller="Admin" asp-action="" asp-route-id=><i class="bi bi-pencil-square me-2"></i>Edit</a>
                            <button class="btn btn-danger delete-faculty" data-faculty-id="" data-bs-toggle="modal" data-bs-target="#actionModal"><i class="bi bi-trash me-2"></i>Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>



    <div class="modal fade" id="actionModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Select Action</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <button class="btn btn-primary btn-sm"><i class="bi bi-pencil-square"></i> Edit</button>
                    <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</button>
                </div>
            </div>
        </div>
    </div>


</div>
