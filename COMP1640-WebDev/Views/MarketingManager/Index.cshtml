@{
    Layout = "./Layout/_MMLayout";
}

<div class="px-4 mt-4 min-vh-100">
    <h1 class="mb-3">Dashboard</h1>

    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: bold; font-size: 24px;">Total Magazine</h5>
                    <p class="card-text" style="font-weight: bold; font-size: 20px;">@ViewBag.MagazinesData</p> <!-- Display total magazine count -->
                </div>
            </div>
        </div>

        <div class="col-lg-4 mb-4">
            <div class="card bg-warning text-dark">
                <div class="card-body">
                    <h5 class="card-title" style="font-weight: bold; font-size: 24px;">Total Accepted File</h5>
                    <p class="card-text" style="font-weight: bold; font-size: 20px;">@ViewBag.FilesData</p> <!-- Display total file count -->
                </div>
            </div>
        </div>
    </div>

    <div class="row my-3">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Quick Links</h5>
                    <a asp-controller="MarketingManager" asp-action="MagazinesManagement" class="btn btn-primary mb-2">Manage Magazines</a>
                    <a asp-controller="MarketingManager" asp-action="DataManagement" class="btn btn-primary mb-2">Download File</a>
                </div>
            </div>
        </div>
    </div>
</div>
